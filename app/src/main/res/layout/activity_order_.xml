<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Order_Activity">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Tuna Pizza"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginVertical="3dp"
        android:fontFamily="monospace"
        android:transitionName="example_trans_two"
        />

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/tonapizza"
        android:transitionName="example_transition"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEDIUM"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/small_price"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:transitionName="example_trans_3"/>

            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginVertical="4dp"/>

            <LinearLayout
                android:background="@drawable/btn_min"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/small_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="#000"/>

                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/min_small"
                        android:onClick="clicks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textColor="#ff0000"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_min"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/pls_small"
                        android:onClick="clicks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_pls"/>



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#e4e3e3"/>

        <LinearLayout
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LARGE"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="#000"/>



                <TextView
                    android:id="@+id/large_price"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:transitionName="example_trans_4"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#000"
                android:layout_marginVertical="4dp"/>

            <LinearLayout
                android:background="@drawable/btn_min"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/large_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="#000"/>


                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/min_large"
                        android:onClick="clicks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:textColor="#ff0000"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_min"
                        android:visibility="gone"/>


                    <Button
                        android:id="@+id/pls_large"
                        android:onClick="clicks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_pls"/>



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Total "
            android:fontFamily="cursive"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/bill"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="0"
            android:textStyle="italic"
            android:fontFamily="serif"
            android:textSize="25sp" />



    <Button
        android:id="@+id/done"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to order"
        android:onClick="doneBtn"
        android:textSize="22dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:background="@drawable/btn_op"
        />

</LinearLayout>

</ScrollView>